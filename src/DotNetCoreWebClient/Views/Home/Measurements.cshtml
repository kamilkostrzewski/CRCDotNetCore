
@{
    ViewData["Title"] = "Measurements";
}

<h1>Measurements</h1>

<form>
    <div class="form-group">
        <div class="form-group">
            <label for="measurements_nameInput">Name</label>
            <input type="text" class="form-control" id="measurements_nameInput" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="measurements_valueInput">Value</label>
            <input type="number" class="form-control" id="measurements_valueInput" placeholder="Enter value">
        </div>
        <button type="button" class="btn btn-primary" id="measurements_addBtn">Add</button>
    </div>
</form>

<div class="container" id="measurements_container">
    <div class="row bg-light">
        <div class="col-sm">
            Id
        </div>
        <div class="col-sm">
            Name
        </div>
        <div class="col-sm">
            Value
        </div>
        <div class="col-sm">
            Created By
        </div>
        <div class="col-sm">
            <!-- Empty column for remove button -->
        </div>
    </div>
    <div class="row d-none">
        <div class="col-sm" data-column-type="id"></div>
        <div class="col-sm" data-column-type="name"></div>
        <div class="col-sm" data-column-type="value"></div>
        <div class="col-sm" data-column-type="createdBy"></div>
        <div class="col-sm">
            <a href="#">Remove</a>
        </div>
    </div>
</div>

<script src="~/js/new-measurement-section.js" asp-append-version="true"></script>
<script src="~/js/measurement-controller.js" asp-append-version="true"></script>
<script src="~/js/measurement-list-section.js" asp-append-version="true"></script>

